    <%= f.label :fotoperfil %><br>
    <%= f.file_field :fotoperfil %>
  </div>
  
  <div class="actions">
    <%= f.submit "Crear/Editar", :class => "btn btn-primary"%>
  </div>
  <%= link_to 'Back', myprofiles_path %>
<% end %>
</div>
</div>
</div>
