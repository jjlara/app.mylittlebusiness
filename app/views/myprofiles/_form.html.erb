<div class="container">
  <div class="row">
   <div class="col-md-6 col-md-offset-3">
     <div class="well">

<%= form_for @myprofile, :html => {:multipart => true} do |f| %>


  <% if @myprofile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@myprofile.errors.count, "error") %> prohibited this myprofile from being saved:</h2>

      <ul>
      <% @myprofile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <h1>Crear/Editar perfil</h1>

  <div class="field">
