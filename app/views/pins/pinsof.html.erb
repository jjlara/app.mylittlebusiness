<div class="container">

  
   <h1>Mis productos</h1>

<% @pins.each do |pin| %>
<div class="col-md-3">
  <div class="thumbnail">
       <p>
      <strong>Categoria:</strong>
      <%= pin.categoria %>
    </p>
    
       <p>
      <strong>Nombre:</strong>
      <%= pin.name %>
    </p>

       <%= image_tag(pin.avatar, :class => 'img-responsive') %>
       <p>
      <strong>Descripcion:</strong>
      <%= pin.descripcion %>
    </p>
       <p>
      <strong>Precio:</strong>
      <%= pin.price %>â‚¬
    </p>
    <p>
      <strong>Stock:</strong>
      <%= pin.stock %>Uni.
    </p>
    <p>
      <strong>Referencia:</strong>
      <%= pin.referencia %>
    </p>
    <div class="buttons" style="margin-top:10px; margin-bottom:10px">
       <%= link_to 'Show', pin, :class => 'btn' %>
       <%= link_to 'Edit', edit_pin_path(pin), :class => 'btn' %>
       <% if user_signed_in? %>
       <%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?'}, :class => 'btn'  %>
      <% end %> 
    </div>
  </div>
</div>
<% end %>

<br>
<% if user_signed_in? %>
<%= link_to 'New Pin', new_pin_path %>
<% end %>
</div>