<div class="container">
  



<table class="table table-striped">
  <thead>
    <tr>
      <th>Calendario</th>
      <th>Horarios</th>
      <th>Notificaciones Push</th>
      <th>Chat</th>
      <th>Paypal</th>
      <th>Promos</th>
      <th>Reservas Articulos</th>
      <th>Cita Previa</th>
      <th>Telefono Contacto</th>
      <th>Editar</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gadgets.each do |gadget| %>
     <tr>
        <td><% if gadget.calendar? %>
        <span class="label label-success">Activado</span>
      <% else gadget.calendar = false %>
        <span class="label label-primary">Desactivado</span>
      <% end %></td>
      <td><% if gadget.horarios? %>
        <span class="label label-success">Activado</span>
      <% else gadget.horarios = false %>
        <span class="label label-primary">Desactivado</span>
      <% end %></td>
      <td><% if gadget.push? %>
        <span class="label label-success">Activado</span>
      <% else gadget.push = false %>
        <span class="label label-primary">Desactivado</span>
      <% end %></td>
      <td><% if gadget.chat? %>
        <span class="label label-success">Activado</span>
      <% else gadget.chat = false %>
        <span class="label label-primary">Desactivado</span>
      <% end %></td>
      <td><% if gadget.paypal? %>
        <span class="label label-success">Activado</span>
      <% else gadget.paypal = false %>
        <span class="label label-primary">Desactivado</span>
      <% end %></td>
      <td><% if gadget.promos? %>
        <span class="label label-success">Activado</span>
      <% else gadget.promos = false %>
        <span class="label label-primary">Desactivado</span>
      <% end %></td>
      <td><% if gadget.reservasarticulos? %>
        <span class="label label-success">Activado</span>
      <% else gadget.reservasarticulos = false %>
        <span class="label label-primary">Desactivado</span>
      <% end %></td>
      <td><% if gadget.cita_previa? %>
        <span class="label label-success">Activado</span>
      <% else gadget.cita_previa = false %>
        <span class="label label-primary">Desactivado</span>
      <% end %></td>
      <td><% if gadget.llamada_telefono? %>
        <span class="label label-success">Activado</span>
      <% else gadget.llamada_telefono = false %>
        <span class="label label-primary">Desactivado</span>
      <% end %></td>
        
       
        <td><%= link_to 'edit', edit_gadget_path(gadget) %>
       <span class= "glyphicon glyphicon-edit" style= "color:green"></span>
        </td>

        
      
    <% end %>
</tbody>
</table>
<br>





</div>
